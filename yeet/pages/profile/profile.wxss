/* pages/profile/profile.wxss */

.h2 {
  font-size: 24px;
  color: #000;
  font-weight: bold;
  margin-top: 18rpx;
  margin-left: 10px;
  z-index: 100;
}

.userSection{
display: flex;
flex-direction: row;
margin: 40rpx;
}



.userInfo {
display: flex;
flex-direction: column;
position: absolute;
left: 110px;
align-items: flex-start;
}

.writePost{
  display: flex;
  height: 30px;
  width: 120px;
  border: 1px solid #646566;
  color: #646566;
  background-color: rgb(253,253,253);
  border-radius: 15px;
  align-items: center;
  padding-left: 20rpx;
}

.subtitle {
  color: #b1b1b1;
}
.nav {
  position: relative;
  width: 100%;
  height: 125px;
  display: flex;
  background-color: rgb(253,253,253);
}
.cards {
  position: relative;
  width: 100%;
  height: 120px;
}

.card {
  height: 125px;
  padding-top: 10rpx;
  margin-left: 20rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.card-avatar {
  width: 88px;
  display: flex;
}

.card-avatar image {
  position: relative;
  height: 125px;
  width: 125px;
  align-self: center;
  margin-left: auto;
  margin-right: auto;
}

.card-text {
  width: 260px;
  height: 100x;
  left: 95px;
  overflow: hidden;
}

.card-title {
  font-weight: 700;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.card-content {
  line-height: 20px;
  color: #646566;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.space {
  width: 100%;
  height: 10rpx;
  background-color: white;
}